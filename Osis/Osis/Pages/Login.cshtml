@page
@model Osis.Pages.LoginModel
@{
    ViewData["Title"] = "About";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel=" stylesheet " id="bootstarp-css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="col-md-12">
            <form method="post" style="width:300px; margin:0 auto;margin-bottom:300px">
                <h3 style="text-align:center;margin-top:100px">Login User</h3>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Credential.UserName"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" asp-for="Credential.UserName" class="form-control" />
                    </div>
                    <div>
                        <span class="text-danger" asp-validation-for="Credential.UserName"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Credential.Password"></label>
                    </div>
                    <div class="col-5">
                        <input type="password" asp-for="Credential.Password" class="form-control" />
                    </div>
                    <div>
                        <span class="text-danger" asp-validation-for="Credential.Password"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <button class=" btn btn-lg btn-primary btn-block text-uppercase" type="submit">sign in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


</body>
</html>